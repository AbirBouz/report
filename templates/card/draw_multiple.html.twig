{% block title %}Draw Multiple Cards{% endblock %}
{% block styles %}
<style>
.card-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}

.card {
    border: 1px solid #ccc;
    padding: 10px;
    margin: 5px;
    border-radius: 5px;
    background-color: white;
    font-size: 20px;
}

.Hearts, .Diamonds {
    color: red;
}

.Spades, .Clubs {
    color: black;
}
</style>
{% endblock %}

{% block body %}
<h1>Draw Multiple Cards</h1>
<div class="cards">
    {% for card in cards %}
        <div class="card">
            {{ card.rank }}{{ card.suitSymbol }}
        </div>
    {% endfor %}
</div>
<p>Remaining cards in deck: {{ remaining }}</p>

<a href="{{ path('card_deck_shuffle') }}">Shuffle Deck</a>
{% endblock %}